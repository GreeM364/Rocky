@model Rocky_Models.Models.Post
@using Rocky_Utility

<style>
    .post-container {
        display: flex;
        flex-direction: column;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .post-content {
        display: flex;
        flex-direction: row;
        margin-bottom: 20px;
    }

    .post-image {
        flex: 1;
        max-width: 50%;
        border-radius: 10px;
        overflow: hidden;
    }

        .post-image img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

    .post-text {
        flex: 1;
        padding-left: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .post-title {
        font-size: 24px;
        margin: 0;
        font-weight: bold;
        color: #333;
        text-align: center;
    }

    .post-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #777;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .post-actions {
        display: flex;
        align-items: center;
    }

    .like-count {
        margin-right: 10px;
        font-weight: bold;
    }

    .like-button {
        background-color: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
        text-decoration: none;
    }

        .like-button:focus {
            outline: none;
        }

    .like-icon {
        color: red;
        transition: color 0.3s;
    }

    .like-button:hover .like-icon {
        color: darkred;
    }

    .main-text {
        font-size: 16px;
        line-height: 1.5;
        color: #333;
        text-align: justify;
        margin-top: 20px;
        padding: 10px;
        background-color: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .edit-button {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .edit-button:hover {
        background-color: #0056b3;
    }

    .edit-button i {
        margin-right: 5px;
    }
</style>

<div class="post-container">
    <div class="post-content">
        <div class="post-image">
            <img src="@WC.ImagePathPosts@Model.Image" alt="Post Image">
        </div>
        <div class="post-text">
            <h2 class="post-title">@Model.Title</h2>
            <div>@Model.ShortText</div>
        </div>
    </div>
    <div class="post-info">
        <span class="post-author">Created by: @Model.CreatedByUserId</span>
        <span class="post-date">Created on: @Model.CreatedDate.ToString("yyyy-MM-dd")</span>
    </div>
    <div class="post-actions">
        <span class="like-count">Like Count: @Model.Like</span>
        <form method="post" action="@Url.Action("Like", "Blog")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="like-button">
                <i class="like-icon fas fa-heart"></i>
            </button>
        </form>
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Blog" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary mx-2">
                <i class="fas fa-edit"></i>
            </a>
            <a asp-controller="Blog" asp-action="Delete" asp-route-Id="@Model.Id" class="btn btn-danger mx-2">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        }
    </div>
    <div class="main-text">
        @Html.Raw(Model.Text)
    </div>
</div>


